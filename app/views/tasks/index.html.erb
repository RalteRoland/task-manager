<div class="p-5">


<h1>Your Tasks</h1>

<!-- Filter by status -->
<p>
  <strong>Filter by status:</strong>
  <%= link_to "All", tasks_path, class: "btn btn-outline-primary btn-sm me-2" %>
  <%= link_to "Pending", tasks_path(status: "pending"), class: "btn btn-outline-primary btn-sm me-2" %>
  <%= link_to "In Progress", tasks_path(status: "in_progress"), class: "btn btn-outline-primary btn-sm me-2" %>
  <%= link_to "Done", tasks_path(status: "done"), class: "btn btn-outline-primary btn-sm" %>
</p>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status.humanize %></td>
        <td><%= task.due_date.strftime("%b %d, %Y") if task.due_date %></td>
        <td>
          <%= link_to "View", task_path(task), class: "btn btn-sm btn-info me-1" %>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-warning me-1" %>
          <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "Create New Task", new_task_path, class: "btn btn-success" %>
  <%= link_to "Back to Dashboard", root_path, class: "btn btn-primary ms-2" %>
</p>

</div>

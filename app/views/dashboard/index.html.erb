<h1>Dashboard</h1>

<p>Welcome, <%= current_user.email %>!</p>

<h2>
  <%= link_to "Create New Task", new_task_path, class: "btn btn-primary" %>
</h2>

<div>
  <h3>Task Summary</h3>
  <ul>
    <li>Total Tasks: <%= @tasks_count %></li>
    <li>Pending: <%= @pending_count %></li>
    <li>In Progress: <%= @in_progress_count %></li>
    <li>Done: <%= @done_count %></li>
  </ul>
</div>

<div>
  <h3>Upcoming Tasks</h3>
  <% if @upcoming_tasks.any? %>
    <ul>
      <% @upcoming_tasks.each do |task| %>
        <li>
          <%= link_to task.title, task_path(task) %> - Due <%= task.due_date.strftime("%b %d, %Y") %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No upcoming tasks.</p>
  <% end %>
</div>

<p><%= link_to "View All Tasks", tasks_path %></p>
